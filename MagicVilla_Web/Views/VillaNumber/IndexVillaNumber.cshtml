@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>


<div class="card card-body">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber"
               class="btn btn-outline-primary">
                Create new Villa Number <i class="bi bi-plus"></i>
            </a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Villa Name</th>
                    <th>Villa Number</th>
                    <th>Special Details</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Villa.Name</td>
                        <td>@item.VillaNum</td>
                        <td>@item.SpecialDetails</td>
                        <td>
                            <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNum="@item.VillaNum" class="btn btn-outline-success"> <i class="bi bi-pencil-fill"></i></a>
                            <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNum="@item.VillaNum" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>